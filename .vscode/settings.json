{
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.insertSpaces": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "always",
            "source.fixAll.ruff": "always"
        }
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/migrations": true,
        "**/migrations.py": true,
        "**/migrations/*": true
    },
    "python.analysis.ignore": [
        "**/.venv/",
    ],
    // HACK: We're using ruff instead of flake8 and pylint,
    // so disable them in case they're installed.
    // It would be better to disable them entirely for this workspace,
    // but that's currently a manual process.
    "python.linting.enabled": false,
    "flake8.args": [
        "--select",
        "DOESNOTEXIST"
    ],
    "pylint.args": [
        "--init-hook",
        "raise SystemExit(0)"
    ],
}
